<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="imageDialog"
        title="Image View"
        afterClose="onDialogClose"
        class="sapUiSmallMargin">
        <content>
            <Image
                id="idOfYourImageControl" 
                width="100%"
                height="auto"
                src="Assets/flow.png" /> <!-- The source will be set dynamically -->
        </content>
        <beginButton>
            <Button
                text="Close"
                press="onDialogClose" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
